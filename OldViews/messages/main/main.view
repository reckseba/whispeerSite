<header>Nachrichten</header>
<div id="topicListWrap">
	<ul id="topicList">
		<li class="topic" id="newmessage">
			<div class="left"><i class="icon-plus-circle" id="plusBtn"></i></div>
			<div class="right">Neue Nachricht</div>
		</li>
		<div id="topicListScroll">
		</div>
	</ul>
</div>
<div id="topicWrap" class="peerChat">
	<div id="messageTitle">	
		<h2></h2>
	</div>
	<div id="messageWrap">
		<ul class="scroll-pane" id="messageList">
		</ul>	
		<form id="inputWrap">
			<textarea id="messageInput" type="text" placeholder="Gebe deine Nachricht ein!"></textarea>
			<button class="btn btn-success" id="sendmessage" type="submit">Senden</button>		
		</form>
	</div>
</div>